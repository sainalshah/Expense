<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>

        <item name="windowFixedWidthMajor">80%</item>
        <item name="windowFixedWidthMinor">80%</item>
        <item name="windowFixedHeightMajor">90%</item>
        <item name="windowFixedHeightMinor">90%</item>

        <item name="windowMinWidthMajor">60%</item>
        <item name="windowMinWidthMinor">60%</item>
        <item name="windowMinHeightMajor">40%</item>
        <item name="windowMinHeightMinor">40%</item>
    </style>
</resources>
